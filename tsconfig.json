{
  "version": "0.0.1",
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "removeComments": true,
    "noImplicitAny": true,
    "jsx": "react",
    "sourceMap": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "formatOnSave": true
  },
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx",
    "!node_modules/**"
  ]
}
